{
  "manifest_version": 1,
  "name": "Tab Anchor",
  "version": "1.0.0",
  "description": "AAlways open new tabs on the monitor you choose. Anchor a window, reuse it for pop-ups/hyperlinks, and improve your multi-monitor workflow.",
  "permissions": [
    "storage",
    "tabs",
    "windows",
    "webNavigation",
    "contextMenus"
  ],
  "background": {
    "service_worker": "src/js/background.js"
  },
  "action": {
    "default_title": "Tab Anchor",
    "default_popup": "src/html/popup.html"
  },
  "options_page": "src/html/options.html",
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  }
}